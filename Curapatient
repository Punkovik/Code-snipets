package smallTest;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.Test;

import java.util.concurrent.TimeUnit;

public class Curapatient {

    @Test
    public void curapatienExplore() throws InterruptedException {
        System.setProperty("webdriver.chrome.driver", "chromedriver");
        WebDriver driver = new ChromeDriver();
        driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);

        driver.get("https://walgreensuat.curapatient.com/login");

        WebElement loginLocator = driver.findElement(By.xpath("//*[@placeholder='Enter username or email']"));
        WebElement passwordLocator = driver.findElement(By.xpath("//*[@placeholder='Enter password']"));

        loginLocator.sendKeys("testpatient726@mailinator.com");
        passwordLocator.sendKeys("Vaccine1!");

        WebElement loginField = driver.findElement(By.xpath("//*[@class='mat-button-wrapper']"));
        loginField.click();

        JavascriptExecutor js = (JavascriptExecutor) driver;
        js.executeScript("window.scrollBy(0,250)", "");

        WebElement appointmentField = driver.findElement(By.xpath("(//*[text()=' Schedule Appointment '])[2]"));
        appointmentField.click();

        WebElement vaccineLocator = driver.findElement(By.xpath("//*[text()='Moderna']"));
        vaccineLocator.click();

        WebElement continueField = driver.findElement(By.xpath("//*[text()='Continue']"));
        continueField.click();

        WebElement timeSlotLocator = driver.findElement(By.xpath("//*[text()=' 2:20 AM ']"));
        timeSlotLocator.click();

        WebElement scheduleField = driver.findElement(By.xpath("//*[text() = ' Schedule Appointment ']"));
        scheduleField.click();

        WebElement detailsLocator = driver.findElement(By.xpath("//*[text() = ' View Details ']"));
        detailsLocator.click();
        Thread.sleep(3000);

        WebElement cancelField = driver.findElement(By.xpath("//*[text() = ' Cancel Appointment ']"));
        cancelField.click();
        Thread.sleep(3000);

        driver.quit();




    }
}
